modules = ["python-3.11"]

[nix]
channel = "stable-25_05"

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit Travel Agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "streamlit_website"

[[workflows.workflow]]
name = "Streamlit Travel Agent"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add python-dotenv crewai amadeus requests tabulate && streamlit run app.py --server.port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "streamlit_website"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add python-dotenv crewai amadeus tabulate requests"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 34863
externalPort = 3000

[[ports]]
